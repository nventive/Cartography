<Page
    x:Class="Samples.DynamicMap_ZoomPoiPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Button x:Name="ReturnToDynamicMapMenu"
                    Click="PoiZoomToDynamicMapMenu">
                <TextBlock Text="Return to DynamicMap menu"
                             HorizontalAlignment="Center"/>
            </Button>
            <TextBlock Text="DynamicMap Poi Zoom" />
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Margin="20">

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
