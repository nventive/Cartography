<Project Sdk="MSBuild.Sdk.Extras/2.0.54">
	<PropertyGroup>
		<!-- Change the TargetFrameworks depending on which platform you are building on. This avoids errors as it is impossible to build UAP on OSX (MacOS) -->
		<TargetFrameworks Condition="'$([MSBuild]::IsOsPlatform(OSX))'">netstandard2.0;xamarinios10;</TargetFrameworks>
		<TargetFrameworks Condition="'!$([MSBuild]::IsOsPlatform(OSX))'">netstandard2.0;xamarinios10;monoandroid11.0;uap10.0.19041</TargetFrameworks>
		<!-- Ensures the .xr.xml files are generated in a proper layout folder -->
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<RootNamespace>Cartography.DynamicMap</RootNamespace>
		<Authors>nventive</Authors>
		<Company>nventive</Company>
		<AssemblyName>Cartography.DynamicMap</AssemblyName>
		<PackageId>Cartography.DynamicMap</PackageId>
		<Description>Cartography.DynamicMap</Description>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Chinook.DynamicMvvm" Version="0.7.0-dev.75" />
		<PackageReference Include="Chinook.DynamicMvvm.Reactive" Version="0.7.0-dev.75" />
		<PackageReference Include="Chinook.SectionsNavigation" Version="0.5.0-dev.73" />
		<PackageReference Include="Chinook.SectionsNavigation.Reactive" Version="0.5.0-dev.73" />
		<PackageReference Include="Chinook.SectionsNavigation.Uno" Version="0.5.0-dev.73" />
		<PackageReference Include="GeolocatorService" Version="0.2.0-dev.19" />
		<PackageReference Include="GeolocatorService.Reactive" Version="0.2.0-dev.19" />
		<PackageReference Include="Nventive.View.Uno" Version="0.4.0-dev.45" />
		<PackageReference Include="Reactive.Annex.Uno" Version="0.3.0-dev.18" />
		<PackageReference Include="System.Reactive" Version="5.0.0" />
		<PackageReference Include="Uno.Core" Version="4.0.1" />
		<PackageReference Include="Uno.Core.Extensions" Version="4.0.1" />
		<PackageReference Include="Uno.UI" Version="4.1.9" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'xamarinios10'">
		<PackageReference Include="Uno.Extensions.Logging.OSLog">
		  <Version>1.4.0</Version>
		</PackageReference>
		<PackageReference Include="Xamarin.Google.iOS.Maps" Version="3.9.0" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="UserLocationMarker.UWP.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </None>
	</ItemGroup>

	<ItemGroup>
	  <SourceGeneratorInput Remove="PrettyMapViewPortEqualityComparer.cs" />
	</ItemGroup>

	<ItemGroup>
	  <SourceGeneratorInput Remove="ObservableExtension.cs" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Cartography.Core\Cartography.Core.csproj" />
	</ItemGroup>

</Project>
